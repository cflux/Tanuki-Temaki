{
  "manifest_version": 3,
  "name": "Tanuki Temaki",
  "version": "0.1.0",
  "description": "Discover new anime series on Crunchyroll through intelligent relationship mapping and tag-based clustering",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.crunchyroll.com/*",
    "ws://localhost:8765/*",
    "http://localhost:8765/*"
  ],
  "background": {
    "scripts": ["src/background/index.ts"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.crunchyroll.com/series/*"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tanuki-temaki@example.com",
      "strict_min_version": "109.0"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src 'self' ws://localhost:8765 http://localhost:8765 https://www.crunchyroll.com"
  }
}
