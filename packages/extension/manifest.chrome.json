{
  "manifest_version": 3,
  "name": "Tanuki Temaki",
  "version": "0.1.0",
  "description": "Discover new anime series on Crunchyroll through intelligent relationship mapping and tag-based clustering",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.crunchyroll.com/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.crunchyroll.com/series/*"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
